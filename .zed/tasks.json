[
  {
    "label": "CMake Configure Web",
    "command": "emcmake",
    "args": ["cmake", "./", "-B", "cmake-build-web"],
    "use_new_terminal": false,
  },
  {
    "label": "Build Web",
    "command": "emmake",
    "args": ["make", "-C", "cmake-build-web"],
    "use_new_terminal": false,
  },
  {
    "label": "Run Web",
    "command": "emrun",
    "args": ["cmake-build-web/WebDogfight.html"],
    "use_new_terminal": false,
  },
  {
    "label": "CMake Configure Desktop",
    "command": "C:/msys64/mingw64/bin/cmake.exe",
    "args": [
      "-DCMAKE_MAKE_PROGRAM=C:/msys64/mingw64/bin/ninja.exe",
      "-G",
      "Ninja",
      "-B",
      "cmake-build-desktop",
    ],
    "use_new_terminal": false,
  },
  {
    "label": "Build Desktop",
    "command": "C:/msys64/mingw64/bin/cmake.exe",
    "args": ["--build", "cmake-build-desktop", "--target", "WebDogfight"],
    "use_new_terminal": false,
  },
  {
    "label": "Run Desktop",
    "command": "./cmake-build-desktop/WebDogfight.exe",
    "use_new_terminal": false,
  },
]
